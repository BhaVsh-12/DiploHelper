<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".tech_comp_sem1">




    <TextView
        android:text="Computer Semester-1"
        style="@style/viewParent.headerText" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:background="@drawable/home_gradient_maths"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewSub1Title"
                android:text="English"
                style="@style/viewParent.headerText.HomeCardTitle" />

            <EditText
                android:id="@+id/eng_et"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSub1Title"
                android:hint="PDF Name">

            </EditText>

            <ImageButton
                android:id="@+id/eng_upload"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/baseline_drive_folder_upload_24"
                android:layout_below="@id/eng_et"/>

            <ImageView
                android:maxHeight="90dp"
                android:src="@drawable/home_ic_maths"
                style="@style/homeCardImage" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:background="@drawable/home_gradient_maths"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewSub1Title1"
                android:text="Maths"
                style="@style/viewParent.headerText.HomeCardTitle" />
            <EditText
                android:id="@+id/math_et"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSub1Title1"
                android:hint="PDF Name"/>

            <ImageButton
                android:id="@+id/math_upload"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/baseline_drive_folder_upload_24"
                android:layout_below="@id/math_et"/>

            <ImageView
                android:maxHeight="90dp"
                android:src="@drawable/home_ic_physics"
                style="@style/homeCardImage" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:background="@drawable/home_gradient_maths"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewSub1Title2"
                android:text="Science"
                style="@style/viewParent.headerText.HomeCardTitle" />
            <EditText
                android:id="@+id/sci_et"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSub1Title2"
                android:hint="PDF Name"/>

            <ImageButton
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/baseline_drive_folder_upload_24"
                android:layout_below="@id/sci_et"/>

            <ImageView
                android:maxHeight="90dp"
                android:src="@drawable/home_ic_chemistry"
                style="@style/homeCardImage" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:background="@drawable/home_gradient_maths"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewSub1Title3"
                android:text="Lab Manual"
                style="@style/viewParent.headerText.HomeCardTitle" />
            <EditText
                android:id="@+id/man_et"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSub1Title3"
                android:hint="PDF Name"/>

            <ImageButton
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/baseline_drive_folder_upload_24"
                android:layout_below="@id/man_et"/>

            <ImageView
                android:maxHeight="90dp"
                android:src="@drawable/home_ic_geography"
                style="@style/homeCardImage" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:background="@drawable/home_gradient_maths"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewSub1Title4"
                android:text="Microproject"
                style="@style/viewParent.headerText.HomeCardTitle" />
            <EditText
                android:id="@+id/micro_et"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSub1Title4"
                android:hint="PDF Name"/>

            <ImageButton
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/baseline_drive_folder_upload_24"
                android:layout_below="@id/micro_et"/>

            <ImageView
                android:maxHeight="90dp"
                android:src="@drawable/home_ic_chemistry"
                style="@style/homeCardImage" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>








</LinearLayout>
</ScrollView>